<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="ru.philosophyit.orm">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>ru.philosophyit.orm.basic.Person</class>
        <class>ru.philosophyit.orm.basic.Posts</class>
        <class>ru.philosophyit.orm.basic.School</class>
        <properties>
            <!-- Configuring The Database Connection Details -->
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/lesson7" />
            <property name="javax.persistence.jdbc.user" value="lesson7" />
            <property name="javax.persistence.jdbc.password" value="lesson7" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
